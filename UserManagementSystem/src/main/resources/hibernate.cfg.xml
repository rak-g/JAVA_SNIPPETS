<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">
<hibernate-configuration> 
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<!-- dialect converts the calls into respective database requirement -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<!-- driver name -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mytrgdb</property>
		<property name="hibernate.connection.username">root</property>
		<!-- username of database -->
		<property name="hibernate.connection.password">quirky1234</property>
		<!-- password of database -->

		<property name="show_sql">true</property>
		<!-- what queries are generated by hibernate if you want to display on 
			the console -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- takes care of table creation create - everytime new table is created. 
			if any table already exists then it will be deleted update - if the table 
			is already in existance it will use it to store data, if not new table will 
			be created -->

		<mapping
			class="com.simplilearn.hibernate.mvc.dto.User" />
	</session-factory>
</hibernate-configuration>          